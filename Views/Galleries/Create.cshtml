@model omarta_v1._1.Models.Gallery

@{
    ViewBag.Title = "Izveidot galeriju";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm(Html.BeginForm("Create", "Galleries", FormMethod.Post, new { enctype = "multipart/form-data" }))) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="x_panel">
            <h2>Jauna galerija</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="control-label col-md-2"><b>Nosaukums</b></div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2"><b>Vāks</b></div>
                <div class="col-md-4">
                    <input type="file" id="Cover" class="file" name="Cover" />
                    @Html.ValidationMessageFor(model => model.Cover, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Izveidot" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index","Galleries")" class="btn btn-default">< Back to List</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
