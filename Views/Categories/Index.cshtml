@model IEnumerable<omarta_v1._1.Models.Category>

@{
    ViewBag.Title = "Kategorijas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Kategorijas</h3>
<hr />

<p>
    @Html.ActionLink("Izveidot jaunu", "Create", "Categories", new { @class = "btn btn-lrg btn-primary" })
</p>
<table id="example" class="table table-striped responsive-utilities jambo_table">
    <thead>
        <tr>
            <th style="width:1px;">

            </th>
            <th>
                Attēls
            </th>
            <th>
                Nosaukums
            </th>
            <th>
                Parādās
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td></td>
                <td>
                    <img src="@item.ImagePath" height='100' width = '150'/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="width: 15%">
                    @if (item.Show == 1)
                    {
                        <span class="label label-primary">Parādās</span>
                    }
                    else
                    {
                        <span class="label label-danger">Neparādās</span>
                    }
                </td>
                <td style="width: 20%">
                    @if (item.Show == 1)
                    {
                        <a class='btn btn-success' data-toggle="modal" href="#statusModal" data-id=@item.ID data-name=@item.Name data-status=@item.Show data-tabula="kategorija"><i class='fa fa-check'></i></a>
                    }
                    else
                    {
                        <a class='btn btn-dark' data-toggle="modal" href="#statusModal" data-id=@item.ID data-name=@item.Name data-status=@item.Show data-tabula="kategorija"><i class='fa fa-ban'></i></a>
                    }
                    <a class='btn btn-info' href="@Url.Action("Edit","Categories", new { id = item.ID })"><i class='fa fa-edit'></i></a>
                    <a class='btn btn-danger' data-toggle="modal" href="#deleteModal" data-id=@item.ID data-name=@item.Name data-tabula="kategorija"><i class='fa fa-close'></i></a>
                </td>
            </tr>
        }
    </tbody>

</table> <br/> <br/> <br/>
