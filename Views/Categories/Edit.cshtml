@model omarta_v1._1.Models.Category

@{
    ViewBag.Title = "Mainīt kategoriju";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Edit", "Categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="x_panel">
            <h2>Mainīt kategoriju</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                <div class="control-label col-md-2"><b>Nosaukums</b></div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2"><b>Pāradās?</b></div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Show, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Show, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2"><b>Iepriekšejais Attēls</b></div>
                <div class="col-md-4">
                    <img src="@Model.ImagePath" height='100' width='150' />
                </div>
            </div>

                <div class="form-group">
                    <div class="control-label col-md-2"><b>Attēls</b></div>
                    <input type="file" id="fileUpload" class="file" name="fileUpload" />
                    @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Mainīt" class="btn btn-primary" />
                    </div>
                </div>
            </div>
    </div>
}

<div>
    @Html.ActionLink("< Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
